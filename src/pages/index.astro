---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1
        class="hero-typing my-4 inline-flex text-4xl font-bold sm:my-8 sm:text-5xl"
        data-text="Hey, Iâ€™m Kalpesh ðŸ‘‹"
        aria-label="Hey, Iâ€™m Kalpesh"
      >
        <span id="hero-text"></span>
        <span class="hero-cursor" aria-hidden="true">â–‹</span>
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS Feed</span>
      </a>

      <p>
        Iâ€™m a junior developer based in the New York tri-state area, exploring
        how AI tooling and web tech intersect. Expect hands-on write-ups about
        experimenting with LLM protocols, automations, and the occasional
        front-end flourish.
      </p>
      <p class="mt-2">
        When Iâ€™m not shipping side projects, Iâ€™m sketching agent architectures
        and testing ideas with friends in local meetups. Start with the latest
        post or learn more about me below.
      </p>
      <div class="mt-4 flex flex-col gap-3 sm:flex-row">
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/posts/understanding-mcp-and-a2a-protocols/"
        >
          Read the featured post
        </LinkButton>
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/about/"
        >
          About & Contact
        </LinkButton>
      </div>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });

  const typingEl = document.querySelector<HTMLSpanElement>("#hero-text");
  const cursorEl = document.querySelector<HTMLSpanElement>(".hero-cursor");
  const container = document.querySelector<HTMLElement>(".hero-typing");

  if (typingEl && cursorEl && container) {
    const fullText = container.dataset.text ?? "";
    let idx = 0;

    const tick = () => {
      if (idx <= fullText.length) {
        typingEl.textContent = fullText.slice(0, idx);
        idx += 1;
      } else {
        clearInterval(interval);
        cursorEl.classList.add("hero-cursor--idle");
      }
    };

    const interval = window.setInterval(tick, 90);
  }
</script>

<style is:global>
  .hero-typing {
    position: relative;
    white-space: nowrap;
  }

  .hero-cursor {
    margin-left: 0.1em;
    animation: blink 1s steps(1) infinite;
    color: var(--color-accent);
  }

  .hero-cursor--idle {
    animation: blink-slow 1.5s steps(1) infinite;
  }

  @keyframes blink {
    0%,
    50% {
      opacity: 1;
    }
    50.01%,
    100% {
      opacity: 0;
    }
  }

  @keyframes blink-slow {
    0%,
    70% {
      opacity: 1;
    }
    70.01%,
    100% {
      opacity: 0;
    }
  }
</style>
